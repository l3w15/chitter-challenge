<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>
    <% if @user %>
      <h1>Logged in as <%= @user.handle %></h1>
      <form action="/peeps/new" method="GET">
        <input type="submit" value="Create a peep">
      </form>
      <a href="#">Log out</a>
      <a href="/sessions/new">Sign in</a>
    <% else %>
      <a href="/users/new">Sign up</a>
      <a href="/sessions/new">Sign in</a>
    <% end %>

    <% @peeps.each do |peep| %>
      <div class="peep"><h2><%= peep[:text] %></h2></div>
      <div class=""><h3><%= peep[:time] %> </h3></div>

      <form action="/delete" method="post">

      </form>
    <% end %>

  </body>
</html>
