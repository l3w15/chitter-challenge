<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>
    <h1><%= styled_flash %></h1>
    <% if @user %>
      <h1>Logged in as <%= @user.handle %></h1>
      <form action="/peeps/new" method="GET">
        <input type="submit" value="Create a peep">
      </form>
      <a href="/sessions/destroy">Sign out</a>
    <% else %>
      <a href="/users/new">Sign up</a>
      <a href="/sessions/new">Sign in</a>
    <% end %>

    <% @peeps.each do |peep| %>
      <div><h3><%= peep[:handle] %> (<%= peep[:name] %>) </h3></div>
      <div><h2><%= peep[:text] %></h2></div>
      <div><h3><%= peep[:time] %> </h3></div>
    <% end %>

  </body>
</html>
