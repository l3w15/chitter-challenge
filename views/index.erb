<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter</title>
  </head>
  <body>
    <% if @user %>
    <h1>Logged in as <%= @user.name %></h1>
    <% end %>
    <a href="/users/new">Sign up</a>
    <% @peeps.each do |peep| %>
      <div class="peep"><h2><%= peep[:text] %></h2></div>
      <div class=""><h3><%= peep[:time] %> </h3></div>

      <form action="/delete" method="post">

      </form>
    <% end %>
    <form action="/peeps/new" method="GET">
      <input type="submit" value="Create a peep">
    </form>
  </body>
</html>
